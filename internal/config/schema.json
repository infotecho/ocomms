{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/infotecho/ocomms/internal/config/config",
  "$ref": "#/$defs/Config",
  "$defs": {
    "Config": {
      "properties": {
        "server": {
          "properties": {
            "port": {
              "type": "string"
            },
            "timeouts": {
              "properties": {
                "ReadHeaderTimeout": {
                  "type": "string"
                },
                "ReadTimeout": {
                  "type": "string"
                },
                "WriteTimeout": {
                  "type": "string"
                },
                "IdleTimeout": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "ReadHeaderTimeout",
                "ReadTimeout",
                "WriteTimeout",
                "IdleTimeout"
              ]
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "port",
            "timeouts"
          ]
        },
        "logging": {
          "properties": {
            "format": {
              "type": "string",
              "enum": [
                "text",
                "json"
              ]
            },
            "level": {
              "type": "string",
              "enum": [
                "debug",
                "info",
                "warn",
                "error"
              ]
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "format",
            "level"
          ]
        },
        "i18n": {
          "properties": {
            "defaultLang": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "defaultLang"
          ]
        },
        "mail": {
          "properties": {
            "from": {
              "properties": {
                "name": {
                  "type": "string"
                },
                "address": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "name",
                "address"
              ]
            },
            "to": {
              "properties": {
                "name": {
                  "type": "string"
                },
                "address": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "name",
                "address"
              ]
            },
            "sendgrid": {
              "properties": {
                "apiKey": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "apiKey"
              ]
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "from",
            "to",
            "sendgrid"
          ]
        },
        "twilio": {
          "properties": {
            "agentDIDs": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "auth": {
              "properties": {
                "accountSID": {
                  "type": "string"
                },
                "keySID": {
                  "type": "string"
                },
                "keySecret": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "accountSID",
                "keySID",
                "keySecret"
              ]
            },
            "languages": {
              "additionalProperties": {
                "type": "string"
              },
              "type": "object"
            },
            "recordInboundCalls": {
              "type": "boolean"
            },
            "recordOutboundCalls": {
              "type": "boolean"
            },
            "timeouts": {
              "properties": {
                "dialAgents": {
                  "type": "integer"
                },
                "gatherLanguage": {
                  "type": "integer"
                },
                "gatherOutboundNumber": {
                  "type": "integer"
                },
                "gatherAcceptCall": {
                  "type": "integer"
                },
                "gatherStartVoicemail": {
                  "type": "integer"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "dialAgents",
                "gatherLanguage",
                "gatherOutboundNumber",
                "gatherAcceptCall",
                "gatherStartVoicemail"
              ]
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "agentDIDs",
            "auth",
            "languages",
            "recordInboundCalls",
            "recordOutboundCalls",
            "timeouts"
          ]
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "server",
        "logging",
        "i18n",
        "mail",
        "twilio"
      ]
    }
  }
}